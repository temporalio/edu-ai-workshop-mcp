{
    "image": "temporalio/gitpod-edu:1.4",
    "features": {
        "ghcr.io/devcontainers/features/github-cli:1": {}
    },
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-toolsai.jupyter",
                "ms-python.python"
            ]
        },
        "codespaces": {
            "openFiles": [
                "README.md"
            ]
        }
    },
    "forwardPorts": [8080, 7233, 5125, 6080, 5901],
    "postCreateCommand": "curl -LsSf https://astral.sh/uv/install.sh | sh",
    "postStartCommand": "~/start-desktop.sh && temporal server start-dev --ui-port 8080 & . $HOME/.cargo/env && cd /workspaces/edu-ai-workshop-mcp && uv run python mcp_servers/weather.py > /tmp/mcp-server.log 2>&1 &",
    "remoteEnv": {
        "PROMPT_DIRTRIM": "2",
        "PATH": "${containerEnv:HOME}/.cargo/bin:${containerEnv:HOME}/.local/bin:${containerEnv:PATH}",
        "DISPLAY": ":1"
    },
    "portsAttributes": {
        "5125": {
            "label": "MCP Server",
            "visibility": "public"
        },
        "6080": {
            "label": "Desktop (noVNC)",
            "visibility": "public"
        }
    },
    "postAttachCommand": "gh codespace ports visibility 5125:public -c $CODESPACE_NAME 2>/dev/null || true && gh codespace ports visibility 6080:public -c $CODESPACE_NAME 2>/dev/null || true"
}